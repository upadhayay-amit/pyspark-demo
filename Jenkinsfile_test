pipeline {
 
    agent any
    
    stages {
         stage('Checkout Code') {
             steps {
                     checkout scm
                  }
              }
          stage('Deploy Packages') {
            steps {
              echo 'Deploying Pacakages'
              script {
              
                 deploy_required_packages()
              }
            
            }
          
          }
        }  
    }    
   void deploy_required_packages() {
      sh '''
         echo 'starting the deployment'
         cd   $WORKSPACE
         echo $WORKSPACE
         python --version
         python3 -m venv test_env
         source test_env/bin/activate
         python --version
         pip install pytest-cov
         pip list
         
         
      '''
   }
